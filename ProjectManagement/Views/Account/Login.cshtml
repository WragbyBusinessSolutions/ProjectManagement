@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutProjectLogin.cshtml";
}


<div class="auth">
    <div class="auth-container">
        <div class="card">
            <header class="auth-header">
                <h1 class="auth-title">
                    <div class="sidebar-header">
                        <img src="~/images/ProjectManagement.png" width="100%" />
                    </div>
                </h1>
            </header>
            <div class="auth-content">
                <p class="text-center">LOGIN TO CONTINUE</p>
                @{
                    var loginProviders = (await SignInManager.GetExternalAuthenticationSchemesAsync()).ToList();
                    if (loginProviders.Count == 0)
                    {
                        
                    }
                    else
                    {
            <form asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <div>
                    <p>
                        @foreach (var provider in loginProviders)
                        {


                          
                            <div class="form-group">
                                <button type="submit" class="btn btn-block btn-primary" name="provider" value="@provider.Name"  title="Log in using your organization email">Login with Organization Email</button>
                            </div>


                        }

                    </p>
                </div>

              
            </form>
                    }
                }
            </div>
        </div>
     </div>
    </div>


