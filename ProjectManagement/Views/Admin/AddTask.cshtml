
@{
    ViewData["Title"] = "AddTask";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Row -->
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default card-view">
            <div class="panel-heading">
                <div class="pull-left">
                    <h3 class="txt-dark">Create New Task</h3>
                    <h6 class="panel-title txt-dark">Basic Tasks Details</h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12 col-xs-12">
                            <div class="form-wrap">
                                <form>
                                    <div class="form-group">
                                        <label class="control-label mb-10" for="exampleInputuname_1">Name</label>
                                        <div class="input-group">
                                            <div class="input-group-addon"><i class="icon-user"></i></div>
                                            <input type="text" class="form-control" id="exampleInputuname_1" placeholder="Name">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label mb-10" for="exampleInputEmail_1">Category</label>
                                        <div class="input-group">
                                            <div class="input-group-addon"><i class="icon-envelope-open"></i></div>
                                            <input type="text" class="form-control" id="exampleInputEmail_1" placeholder="Category">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label mb-10" for="exampleInputpwd_1">Project ID</label>
                                        <div class="input-group">
                                            <div class="input-group-addon"><i class="icon-lock"></i></div>
                                            <input type="text" class="form-control" id="exampleInputpwd_1" placeholder="Project ID">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label mb-10" for="exampleInputpwd_1">Assign Task</label>
                                        <div class="input-group">
                                            <div class="input-group-addon"><i class="icon-lock"></i></div>
                                            <input type="text" class="form-control" id="exampleInputpwd_1" placeholder="Assign Task">
                                        </div>
                                    </div>
                                    <div class="form-group">                                       
                                        <div id="education_fields"></div>
                                        <div class="row">
                                            <div class="col-sm-6 nopadding">
                                                <label class="control-label " for="exampleInputpwd_42">Task Timeline Start Date</label>
                                                <div class="form-group">
                                                    <div class="input-group">
                                                        <input type="date" class="form-control" id="Schoolname" name="Schoolname[]" value="" placeholder=" Start Date">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-3 nopadding">
                                                <label class="control-label mb-6" for="exampleInputpwd_42">task Timeline End Date</label>
                                                <div class="form-group">
                                                    <input type="date" class="form-control" id="Schoolname" name="Schoolname[]" value="" placeholder="End Date">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group mb-0">
                                        <a asp-action="ViewDetails" class="btn btn-success  mr-10">Submit</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>
<!-- /Row -->

